extends ../layouts/default

block header
	block header
		header.intro-header(style={background: '#0085a1'})
			.container
				.row
					.col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
						.post-heading
							h1= data.post.title
							h2.subheading!= data.post.content.brief
							span.meta Опубликовано 
								if data.post.publishedDate
									| #{data.post._.publishedDate.format('DD.MM.YYYY')}

block content
	article
	.container: .row: .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
		!= data.post.content.full
		hr
		div#disqus_thread
			script(type="text/javascript")
				|var disqus_shortname = 'danddby';

				|(function() {
				|	var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
				|	dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
				|	(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
				|})();
